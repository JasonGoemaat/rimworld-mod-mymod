<Defs>
  <ThingDef ParentName="LampBase">
    <defName>ZPLamp</defName>
    <label>zero point lamp</label>
    <description>A lamp that taps into zero point energy</description>
    <graphicData>
      <texPath>Things/Building/Furniture/LampStanding</texPath>
    </graphicData>
    <costList>
      <Steel>1</Steel>
    </costList>
    <statBases>
      <Mass>1</Mass>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
    <uiOrder>2990</uiOrder>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass> <!-- try CompPowerTrader -->
        <basePowerConsumption>-5000</basePowerConsumption>
      </li>
      <li Class="CompProperties_Styleable" />
      <li Class="CompProperties_Glower">
        <glowRadius>20</glowRadius>
        <glowColor>(94,214,148,0)</glowColor>
        <colorPickerEnabled>true</colorPickerEnabled>
        <darklightToggle>true</darklightToggle>
      </li>
    </comps>
  </ThingDef>
</Defs>